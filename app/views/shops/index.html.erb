<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Greeting</th>
      <th>Number</th>
      <th>Whatsapp</th>
      <th>Phone</th>
      <th>User</th>
      <th>Shop Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.greeting %></td>
        <td><%= shop.number %></td>
        <td><%= shop.whatsapp %></td>
        <td><%= shop.phone %></td>
        <td><%= shop.user_id %></td>
        <td><%= image_tag shop.avatar.url %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

